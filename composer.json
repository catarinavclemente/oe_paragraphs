{
    "name": "openeuropa/oe_paragraphs",
    "description": "Drupal module providing a collection of Paragraph types based on ECL components.",
    "type": "drupal-module",
    "license": "EUPL-1.1",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "drupal/allowed_formats": "~1.1",
        "drupal/paragraphs": "~1.2",
        "php": "^7.1"
    },
    "require-dev": {
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/config_devel": "~1.2",
        "drupal/core": "^8.5",
        "drupal/drupal-extension": "^4.0.0@alpha",
        "drush/drush": "^9",
        "phpunit/phpunit": "^4.8.28",
        "openeuropa/code-review": "^0.2",
        "openeuropa/task-runner": "^0.4"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "@drupal-scaffold"
        ],
        "post-update-cmd": [
            "@drupal-scaffold"
        ]
    },
    "extra": {
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    }
}
